<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SocialApp.Pages"

    Shell.FlyoutBehavior="Disabled"
    Title="SocialApp"
    Shell.BackgroundColor="White"
    Shell.ForegroundColor="Black"
    Shell.TitleColor="White"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="Gray"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="Black"
    Shell.TabBarTitleColor="Green"
    Shell.TabBarUnselectedColor="Gray"
    Shell.NavBarHasShadow="True"
    >
    <ShellContent Route="LandingPage"
                  Title="Landing"
                  ContentTemplate="{DataTemplate pages:LandingPage}" />

    <ShellContent Title="Onboarding" ContentTemplate="{DataTemplate pages:OnboardingPage}" Route="OnboardingPage"/>

    <ShellContent Route="Profile" ContentTemplate="{DataTemplate pages:Profile}" />


    <ShellContent Route="HomePage" ContentTemplate="{DataTemplate pages:HomePage}" />


    <ShellContent Title="Đăng nhập" ContentTemplate="{DataTemplate pages:LoginPage}" Route="LoginPage"/>
    <ShellContent Route="SignUpPage" ContentTemplate="{DataTemplate pages:SignUpPage}" />
    <ShellContent Route="PostDetailsPage" ContentTemplate="{DataTemplate pages:PostDetailsPage}" />
    <ShellContent Title="post" ContentTemplate="{DataTemplate pages:CreatePostPage}" Route="CreatePostPage"/>
    <ShellContent Title="notifications.png" ContentTemplate="{DataTemplate pages:NotificationPage}" Route="NotificationPage"/>


</Shell>
