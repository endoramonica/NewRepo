<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialApp.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    xmlns:pages ="clr-namespace:SocialApp.App.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="SocialApp.App"
       Shell.BackgroundColor="White"
       Shell.ForegroundColor="Black"
       Shell.TitleColor="White"
       Shell.DisabledColor="Gray"
       Shell.UnselectedColor="Gray"
       Shell.TabBarBackgroundColor="White"
       Shell.TabBarForegroundColor="Black"
       Shell.TabBarTitleColor="Green"
       Shell.TabBarUnselectedColor="Gray"
       Shell.NavBarHasShadow="True">


    
    <ShellContent Title=""
                  ContentTemplate="{DataTemplate pages:InitPage}"
                  Route="InitPage" />
<ShellContent Route="PostDetailsPage"
                  ContentTemplate="{DataTemplate pages:PostDetailsPage}" />
    <ShellContent Title="Onboarding"
                  ContentTemplate="{DataTemplate pages:OnboardingPage}"
                  Route="OnboardingPage" />

    <ShellContent Title="Đăng nhập"
                  ContentTemplate="{DataTemplate pages:LoginPage}"
                  Route="LoginPage" />
    <ShellContent Route="HomePage"
                  ContentTemplate="{DataTemplate pages:HomePage}" />
    <ShellContent Route="CropImagePage"
              ContentTemplate="{DataTemplate pages:CropImagePage}" />

    <ShellContent 
              ContentTemplate="{DataTemplate pages:SignUpPage}"
                  Route="SignUpPage"/>

    <ShellContent
        Title="LandingPage"
        ContentTemplate="{DataTemplate pages:LandingPage}"
        Route="LandingPage" />
    

    <ShellContent Route="Profile"
                  ContentTemplate="{DataTemplate pages:Profile}" />


    <ShellContent Route="FollowPage"
                  ContentTemplate="{DataTemplate pages:FollowPage}" />






    <ShellContent Title="post"
                  ContentTemplate="{DataTemplate pages:CreatePostPage}"
                  Route="CreatePostPage" />
    <ShellContent Title="notifications.png"
                  ContentTemplate="{DataTemplate pages:NotificationPage}"
                  Route="NotificationPage" />


</Shell>
