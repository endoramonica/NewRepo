<ContentPage Title="Táº¡o bÃ i viáº¿t"
             Shell.NavBarIsVisible="False"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:controls="clr-namespace:SocialApp.App.Controls"
             xmlns:vm="clr-namespace:SocialApp.App.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialApp.App.Pages.CreatePostPage"
             BackgroundColor="#F8F9FA"
             Padding="0"
             x:DataType="vm:SavePostViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <controls:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto,Auto">

        <!-- ===== HEADER ===== -->
        <Grid ColumnDefinitions="Auto,*,Auto"
              Grid.Row="0"
              BackgroundColor="White"
              Padding="15,10">
            <!-- Shadow effect for header -->
            <Grid.Shadow>
                <Shadow Brush="Gray" Offset="0,2" Radius="4" Opacity="0.1"/>
            </Grid.Shadow>

            <!-- Back button -->
            <Button Grid.Column="0"
                    Text="â† Quay láº¡i"
                    BackgroundColor="Transparent"
                    TextColor="#1877F2"
                    FontSize="16"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Padding="0">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Button.GestureRecognizers>
            </Button>

            <!-- Title -->
            

            <!-- User avatar and name -->
            <Grid ColumnDefinitions="Auto, *"
                  Grid.Column="2"
                  VerticalOptions="Center">
                <Border Grid.Column="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="#E4E6EA"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    
                </Border>
                
            </Grid>
        </Grid>

        <!-- ===== SCROLL VIEW CONTENT ===== -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15"
                                 Spacing="20">

                <!-- Content input area -->
                <Border BackgroundColor="White"
                        Stroke="#E4E6EA"
                        StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Gray" Offset="0,1" Radius="3" Opacity="0.1"/>
                    </Border.Shadow>
                    <Editor FontSize="16"
                            MinimumHeightRequest="120"
                            Margin="15"
                            Placeholder="Báº¡n Ä‘ang nghÄ© gÃ¬?"
                            PlaceholderColor="#8A8D91"
                            Text="{Binding Content}"
                            TextColor="#1C1E21"
                            BackgroundColor="Transparent"
                            VerticalOptions="Start" />
                </Border>

                <!-- Attachment options -->
                <Grid ColumnDefinitions="*,*,*,*"
                      ColumnSpacing="8"
                      RowDefinitions="Auto,Auto">

                    <!-- Location button -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            Stroke="#E4E6EA"
                            StrokeThickness="1"
                            Padding="12,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Button BackgroundColor="Transparent"
                                Clicked="OnAddLocationClicked"
                                Text="ðŸ“ Vá»‹ trÃ­"
                                TextColor="#42B883"
                                FontSize="12"
                                Padding="0" />
                    </Border>

                    <!-- Tag friends button -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            Stroke="#E4E6EA"
                            StrokeThickness="1"
                            Padding="12,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Button BackgroundColor="Transparent"
                                Clicked="OnTagFriendsClicked"
                                Text="ðŸ‘¥ Tag"
                                TextColor="#FF6B6B"
                                FontSize="12"
                                Padding="0" />
                    </Border>

                    <!-- Photo/Video button -->
                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            Stroke="#E4E6EA"
                            StrokeThickness="1"
                            Padding="12,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Button BackgroundColor="Transparent"
                                Text="ðŸ“· áº¢nh"
                                TextColor="#4ECDC4"
                                FontSize="12"
                                Padding="0">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SelectPhotoCommand}" />
                            </Button.GestureRecognizers>
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                             Binding="{Binding PhotoPath}"
                                             Value="">
                                    <Setter Property="IsVisible" Value="True" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Border>

                    <!-- Emotion button -->
                    <Border Grid.Column="3"
                            BackgroundColor="White"
                            Stroke="#E4E6EA"
                            StrokeThickness="1"
                            Padding="12,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Button BackgroundColor="Transparent"
                                Clicked="OnAddEmotionClicked"
                                Text="ðŸ˜Š Cáº£m xÃºc"
                                TextColor="#FFD93D"
                                FontSize="12"
                                Padding="0" />
                    </Border>
                </Grid>

                <!-- Remove photo button -->
                <Button Text="âœ• XÃ³a áº£nh"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        CornerRadius="20"
                        FontSize="14"
                        IsVisible="{Binding PhotoPath, Converter={StaticResource NullOrEmptyToBoolConverter}}"
                        Command="{Binding RemovePhotoAsyncCommand}"
                        VerticalOptions="Start"
                        HorizontalOptions="End"
                        Padding="15,8"
                        Margin="0,5,0,0" />

                <!-- Photo preview -->
                <Border HeightRequest="250"
                        BackgroundColor="White"
                        Stroke="#E4E6EA"
                        StrokeThickness="1"
                        Grid.Row="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Gray" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border"
                                     Binding="{Binding PhotoPath}"
                                     Value="">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </Border.Triggers>

                    <Image HeightRequest="250"
                           Source="{Binding PhotoPath}"
                           Aspect="AspectFill" />
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- ===== POST BUTTON ===== -->
        <Border Grid.Row="2"
                BackgroundColor="White"
                Padding="15,10">
            <Border.Shadow>
                <Shadow Brush="Gray" Offset="0,-2" Radius="4" Opacity="0.1"/>
            </Border.Shadow>

            <Button BackgroundColor="#1877F2"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="ðŸ“ ÄÄƒng bÃ i"
                    TextColor="White"
                    Command="{Binding SavePostCommand}"
                    HeightRequest="50">
                <Button.Shadow>
                    <Shadow Brush="#1877F2" Offset="0,2" Radius="8" Opacity="0.3"/>
                </Button.Shadow>
            </Button>
        </Border>

        <!-- ===== ACTIVITY INDICATOR ===== -->
        <ActivityIndicator Grid.RowSpan="4"
                          IsRunning="{Binding IsBusy}" 
                          VerticalOptions="Center" 
                          HorizontalOptions="Center" 
                          Color="#1877F2"
                          BackgroundColor="#80000000" />
    </Grid>
</ContentPage>