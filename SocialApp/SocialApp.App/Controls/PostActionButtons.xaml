<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialApp.App.Controls.PostActionButtons">
    <FlexLayout JustifyContent="SpaceAround" AlignItems="Center" Wrap="NoWrap">
        <!-- Nút Like -->
        <HorizontalStackLayout Spacing="5">
            <Image HeightRequest="20" WidthRequest="20" Source="pink_heart.png" VerticalOptions="Center" />
            <Label FontSize="12" Text="Like" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Nút Comment -->
        <HorizontalStackLayout Spacing="5">
            <Image HeightRequest="20" WidthRequest="20" Source="bomb.png" VerticalOptions="Center" />
            <Label FontSize="12" Text="Comment" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Nút Save -->
        <HorizontalStackLayout Spacing="5">
            <Image HeightRequest="20" WidthRequest="20" Source="pin_drop.png" VerticalOptions="Center" />
            <Label FontSize="12" Text="Save" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Nút Share -->
        <HorizontalStackLayout Spacing="5">
            <Image HeightRequest="20" WidthRequest="20" Source="share.png" VerticalOptions="Center" />
            <Label FontSize="12" Text="Share" VerticalOptions="Center" />
        </HorizontalStackLayout>
    </FlexLayout>
</ContentView>
